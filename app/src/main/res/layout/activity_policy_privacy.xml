    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_security_n_n_we_take_steps_to_protect_your_information_from_unauthorized_access_use_or_disclosure_we_use_industry_standard_encryption_to_protect_your_data_when_it_is_transmitted_and_at_rest_we_also_have_security_measures_in_place_to_protect_our_servers_and_computer_systems_from_unauthorized_access_n_n"
