    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Policy_Privacy">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/introduction_n_n_this_policy_and_privacy_statement_explains_how_we_collect_use_and_protect_your_personal_information_when_you_use_our_doctors_appointment_system_android_app_n"
