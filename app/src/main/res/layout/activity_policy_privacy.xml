    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changes_to_this_policy_n_n_we_may_update_this_policy_from_time_to_time_if_we_make_any_significant_changes_we_will_notify_you_by_email_n_n"
