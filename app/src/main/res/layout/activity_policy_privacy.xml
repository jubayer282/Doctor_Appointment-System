    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/information_we_collect_n_n_we_collect_the_following_information_from_you_when_you_use_our_app_n_n1_personal_information_this_includes_your_name_email_address_phone_number_and_date_of_birth_n2_medical_information_this_includes_your_medical_history_medications_and_other_health_related_information_n3_device_information_this_includes_your_device_s_id_and_device_type_n_n"
