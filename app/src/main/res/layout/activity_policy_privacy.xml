    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/developer_jubayer_hossain_ncontact_number_01758860911_n_n"
        android:textColor="@color/teal_700" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/effective_date_n_n_this_policy_is_effective_as_of_october_31_2023_n_n"
